{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  customDatasources: {
    "stackage-lts": {
      defaultRegistryUrlTemplate: "https://www.stackage.org/download/snapshots.json",
      transformTemplates: [
        '{"releases": $map($filter($keys(), function($v) { $contains($v, /^lts-/) } ), function($v) { {"version": $replace($lookup($, $v), /^lts-/, "") } } ) }',
      ],
    },
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["^stack.yaml$"],
      matchStrings: ["^resolver: lts-(?<currentValue>[0-9.]+)\\n"],
      datasourceTemplate: "custom.stackage-lts",
      depNameTemplate: "lts",
      depTypeTemplate: "dependencies",
    },
    {
      customType: "regex",
      managerFilePatterns: [".github/workflows/*.y*ml"],
      matchStrings: ["ghc-version:\\s+[\"']?(?<currentValue>[0-9.]+)[\"']?"],
      datasourceTemplate: "endoflife-date",
      depNameTemplate: "ghc",
      depTypeTemplate: "github-actions",
      versioningTemplate: "loose",
    },
  ],
}
